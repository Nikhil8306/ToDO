<body>
    <div id="wrapper">

        <div id="header">
            <div class="motivation">Live what you do</div>
        </div>
        <div class="workspaces">
            <div class="notification hide-notification">
                
            </div>
            <div class="side-panel sidebar-open">
                <div class="profile"></div>
                <button class="panel-item home">Home</button>
                <button class="panel-item stat">Statistics</button>
                <button class="panel-item communities">Communities</button>
                <button class="panel-item my-task">My Tasks</button>
                <button type="button" class="side-toggle">|</button>
            </div>
            <div class="warning">
                <div class="warning-box">
                    <div class="warning-message">This is a warning</div>
                    <div class="warning-choices">
                        <button class="warning-no">NO</button>
                        <button class="warning-yes">YES</button>
                    </div>

                </div>
            </div>
            <div class="content">
                <div class="loading">Loading...</div>
                
                <div class="detail-panel">
                    <button class="close-panel">></button>
                    
                    <div class="task-details-panel hide">
                        <label for="taskDetails">Task Title:</label>
                        <input type="text" name="taskDetails" class="taskDetails">
                        <label for="taskDescription">Description:</label>
                        <textarea name="taskDescription" id="" cols="30" rows="10" class="taskDescription"></textarea>
                        <div class="is-important">
                            <input type="checkbox" name="isImportant" class="isImportant" id="isImportant">
                            <label for="isImportant"> Important</label>
                        </div>
                        <div class="repeat-daily">
                            <input type="checkbox" name="dailyRepeat" id="" class="repeatDaily">
                            <label for="dailyRepeat">Repeat Daily</label>
                        </div>
                        <label for="dueTime">Due Time:</label>
                        <input type="datetime-local" name="dueTime" class="taskDueTime" id="">
                        <button class="saveTask">Save</button>
                    </div>
                    
                </div>

                <div class="task-content content-page fade-animation">
                    <div class="content-head">
                        üéØ Tasks
